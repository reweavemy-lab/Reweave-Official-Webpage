{
  "version": "1.0",
  "info": {
    "name": "Reweave OnePage Tokens",
    "source": "Derived from css/styles.css and onepage.html"
  },
  "props": {
    "color": {
      "primaryBlack": "#000000",
      "primaryWhite": "#ffffff",
      "luxuryGray": "#f8f8f8",
      "textGray": "#666666",
      "borderGray": "#e5e5e5",
      "hoverGray": "#f0f0f0",
      "accentDeepPlum": "#5a2b5f",
      "accentIndigo": "#27438a",
      "accentOlive": "#6b7d4b",
      "accentMatteBlack": "#111111"
    },
    "radius": {
      "xs": 6,
      "sm": 10,
      "md": 14
    },
    "spacing": {
      "xs": 4,
      "sm": 8,
      "md": 12,
      "lg": 16,
      "xl": 24,
      "xxl": 32,
      "section": 60,
      "heroTop": 120
    },
    "grid": {
      "columns": 12,
      "gutter": 24,
      "margin": 24,
      "maxWidth": 1100
    },
    "font": {
      "heading": {
        "family": "Playfair Display",
        "h1": { "size": 56, "weight": 300, "lineHeight": 1.2, "letterSpacing": 1 },
        "h2": { "size": 40, "weight": 300, "lineHeight": 1.2, "letterSpacing": 1 },
        "h3": { "size": 29, "weight": 400, "lineHeight": 1.2, "letterSpacing": 0 }
      },
      "body": {
        "family": "Montserrat",
        "default": { "size": 16, "weight": 300, "lineHeight": 1.8, "letterSpacing": 0.5 }
      }
    },
    "button": {
      "paddingX": 18,
      "paddingY": 10,
      "uppercase": true,
      "letterSpacing": 1
    },
    "swatch": {
      "size": 24,
      "outlineWidth": 2,
      "outlineOffset": 2
    }
  }
}